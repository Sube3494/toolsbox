/* pages/tools/mdToWord/mdToWord.wxss */
.header {
    width: 100%;
    padding: 30rpx 0;
    text-align: center;
}

.title {
    font-size: 40rpx;
    font-weight: bold;
    color: #333;
}

.subtitle {
    font-size: 28rpx;
    color: #999;
    margin-top: 10rpx;
}

.tool-content {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.info-text {
    font-size: 28rpx;
    color: #666;
    text-align: center;
    margin-bottom: 30rpx;
}

.md-container {
    width: 100%;
    display: flex;
    justify-content: center;
    margin: 20rpx 0;
    background-color: #f0f0f0;
    border-radius: 8rpx;
    padding: 20rpx;
    box-sizing: border-box;
}

.md-info {
    width: 100%;
}

.md-name {
    font-size: 28rpx;
    color: #333;
    font-weight: 500;
    word-break: break-all;
}

.md-size {
    font-size: 24rpx;
    color: #666;
    margin-top: 10rpx;
}

.error-text {
    color: #ff4d4f;
    font-size: 28rpx;
    margin: 20rpx 0;
    word-break: break-all;
}

.button-group {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin: 30rpx 0;
    gap: 30rpx;
}

.choose-button,
.process-button {
    width: 44%;
}

.result-container {
    width: 100%;
    margin-top: 30rpx;
    padding-top: 30rpx;
    border-top: 1px solid #eee;
}

.result-title {
    font-size: 32rpx;
    font-weight: 500;
    color: #333;
    margin-bottom: 20rpx;
}

.result-info {
    width: 100%;
    margin-bottom: 30rpx;
}

.result-item {
    display: flex;
    flex-direction: row;
    margin-bottom: 10rpx;
}

.item-label {
    width: 160rpx;
    font-size: 28rpx;
    color: #666;
}

.item-value {
    font-size: 28rpx;
    color: #333;
    font-weight: 500;
    word-break: break-all;
}

.download-button {
    width: 100%;
}

.tips {
    width: 100%;
    margin-top: 30rpx;
}

.tips-title {
    font-size: 32rpx;
    font-weight: 500;
    color: #333;
    margin-bottom: 20rpx;
}

.tips-list {
    width: 100%;
}

.tips-item {
    font-size: 26rpx;
    color: #666;
    margin-bottom: 10rpx;
    line-height: 1.5;
}

.format-selector {
    margin: 15rpx 0;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
}

.format-selector text {
    margin-right: 20rpx;
    font-size: 28rpx;
    color: #333;
}

.radio-item {
    margin-right: 30rpx;
    display: inline-flex;
    align-items: center;
    font-size: 28rpx;
}
/* pages/tools/fileCompression/fileCompression.wxss */
.header {
    width: 100%;
    padding: 30rpx 0;
    text-align: center;
}

.title {
    font-size: 40rpx;
    font-weight: bold;
    color: #333;
}

.subtitle {
    font-size: 28rpx;
    color: #999;
    margin-top: 10rpx;
}

.tool-content {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.info-text {
    font-size: 28rpx;
    color: #666;
    text-align: center;
    margin-bottom: 30rpx;
}

.files-list {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 20rpx;
    margin-bottom: 30rpx;
}

.file-item {
    width: 100%;
    position: relative;
    background-color: #f0f0f0;
    border-radius: 8rpx;
    padding: 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.file-info {
    flex: 1;
    overflow: hidden;
}

.file-name {
    font-size: 28rpx;
    color: #333;
    font-weight: 500;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.file-size {
    font-size: 24rpx;
    color: #999;
    margin-top: 6rpx;
}

.file-delete {
    width: 50rpx;
    height: 50rpx;
    background-color: rgba(0, 0, 0, 0.5);
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 25rpx;
    font-size: 40rpx;
    line-height: 1;
}

.format-selector {
    width: 100%;
    margin-bottom: 30rpx;
}

.section-title {
    width: 100%;
    font-size: 30rpx;
    font-weight: 500;
    color: #333;
    margin-bottom: 15rpx;
}

.format-group {
    display: flex;
    flex-direction: row;
    gap: 40rpx;
    padding: 15rpx 0;
}

.format-option {
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 28rpx;
    color: #333;
}

.error-text {
    color: #ff4d4f;
    font-size: 28rpx;
    margin: 20rpx 0;
    word-break: break-all;
}

.button-group {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin: 30rpx 0;
    gap: 30rpx;
}

.choose-button,
.process-button {
    width: 44%;
}

.result-container {
    width: 100%;
    margin-top: 30rpx;
    padding-top: 30rpx;
    border-top: 1px solid #eee;
}

.result-title {
    font-size: 32rpx;
    font-weight: 500;
    color: #333;
    margin-bottom: 20rpx;
}

.result-info {
    width: 100%;
    margin-bottom: 30rpx;
}

.result-item {
    display: flex;
    flex-direction: row;
    margin-bottom: 10rpx;
}

.item-label {
    width: 160rpx;
    font-size: 28rpx;
    color: #666;
}

.item-value {
    font-size: 28rpx;
    color: #333;
    font-weight: 500;
}

.file-url {
    font-size: 24rpx;
    color: #1890ff;
    word-break: break-all;
    max-width: 500rpx;
}

.download-button {
    width: 100%;
}

.tips {
    width: 100%;
    margin-top: 30rpx;
}

.tips-title {
    font-size: 32rpx;
    font-weight: 500;
    color: #333;
    margin-bottom: 20rpx;
}

.tips-list {
    width: 100%;
}

.tips-item {
    font-size: 26rpx;
    color: #666;
    margin-bottom: 10rpx;
    line-height: 1.5;
}

/* 调试信息样式 */
.debug-info {
    width: 100%;
    margin-top: 30rpx;
    background-color: #f5f5f5;
    border-left: 4rpx solid #ddd;
    font-family: monospace;
}

.debug-title {
    font-size: 28rpx;
    font-weight: 500;
    color: #666;
    margin-bottom: 10rpx;
}

.debug-content {
    font-size: 24rpx;
    color: #999;
    line-height: 1.6;
    word-break: break-all;
}
/* pages/tools/imageToExcel/imageToExcel.wxss */
.header {
  width: 100%;
  padding: 30rpx 0;
  text-align: center;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
  margin-top: 10rpx;
}

.tool-content {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.info-text {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 30rpx;
}

.image-container {
  width: 100%;
  display: flex;
  justify-content: center;
  margin: 20rpx 0;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  max-height: 400rpx;
}

.error-text {
  color: #ff4d4f;
  font-size: 28rpx;
  margin: 20rpx 0;
  word-break: break-all;
}

.button-group {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 30rpx 0;
  gap: 30rpx;
}

.choose-button,
.process-button {
  width: 44%;
}

.result-container {
  width: 100%;
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 1px solid #eee;
}

.result-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.result-info {
  width: 100%;
  margin-bottom: 30rpx;
}

.result-item {
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
}

.item-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #666;
}

.item-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.file-url {
  font-size: 24rpx;
  color: #1890ff;
  word-break: break-all;
  text-decoration: underline;
  cursor: pointer;
}

.download-button {
  width: 100%;
}

.tips {
  width: 100%;
  margin-top: 30rpx;
}

.tips-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.tips-list {
  width: 100%;
}

.tips-item {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  line-height: 1.5;
}

/* 调试信息样式 */
.debug-info {
  width: 100%;
  margin-top: 30rpx;
  background-color: #f5f5f5;
  border-left: 4rpx solid #ddd;
  font-family: monospace;
}

.debug-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #666;
  margin-bottom: 10rpx;
}

.debug-content {
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
}

.debug-url {
  color: #1890ff;
  text-decoration: underline;
  cursor: pointer;
}

/* 网络警告样式 */
.network-warning {
  background-color: #fff3cd;
  color: #856404;
  padding: 10rpx 20rpx;
  text-align: center;
  font-size: 28rpx;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

/* 重试按钮样式 */
.retry-button {
  margin-top: 20rpx;
  background-color: #f0ad4e;
  color: white;
}

.retry-button[disabled] {
  background-color: #f8d9a6;
  color: #d9d9d9;
}

/* 网络状态显示 */
.footer {
  margin-top: 40rpx;
  padding: 20rpx;
  text-align: center;
  font-size: 24rpx;
  color: #999;
}

.network-status {
  display: block;
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #666;
}

.tips {
  display: block;
  margin-bottom: 10rpx;
}
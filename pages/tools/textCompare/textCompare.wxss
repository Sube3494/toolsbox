/* pages/tools/textCompare/textCompare.wxss */
.header {
  width: 100%;
  padding: 30rpx 0;
  text-align: center;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
  margin-top: 10rpx;
}

.tool-content {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.info-text {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 30rpx;
}

.section-title {
  width: 100%;
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
}

.text-input {
  width: 100%;
  height: 200rpx;
  background-color: #f9f9f9;
  border: 1px solid #e0e0e0;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.error-text {
  color: #ff4d4f;
  font-size: 28rpx;
  margin: 20rpx 0;
  word-break: break-all;
}

.button-group {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 30rpx 0;
  gap: 30rpx;
}

.clear-button,
.compare-button {
  width: 44%;
}

.result-container {
  width: 100%;
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 1px solid #eee;
}

.result-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.result-stats {
  width: 100%;
  margin-bottom: 30rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.stats-row {
  display: flex;
  flex-direction: row;
  margin-bottom: 15rpx;
}

.stats-label {
  width: 120rpx;
  font-size: 28rpx;
  color: #666;
}

.stats-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.added-count {
  color: #4CAF50;
}

.removed-count {
  color: #F44336;
}

.unchanged-count {
  color: #2196F3;
}

.result-legend {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
  margin: 20rpx 0 30rpx;
}

.legend-item {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.color-block {
  width: 40rpx;
  height: 20rpx;
  margin-right: 10rpx;
  border-radius: 4rpx;
}

.color-block.added {
  background-color: #e6ffe6;
  border: 1px solid #4CAF50;
}

.color-block.removed {
  background-color: #ffe6e6;
  border: 1px solid #F44336;
}

.color-block.unchanged {
  background-color: #f8f8f8;
  border: 1px solid #2196F3;
}

.view-button {
  width: 80%;
  margin: 0 auto;
}

.tips {
  width: 100%;
  margin-top: 30rpx;
}

.tips-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.tips-list {
  width: 100%;
}

.tips-item {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  line-height: 1.5;
}

/* 调试信息样式 */
.debug-info {
  width: 100%;
  margin-top: 30rpx;
  background-color: #f5f5f5;
  border-left: 4rpx solid #ddd;
  font-family: monospace;
}

.debug-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #666;
  margin-bottom: 10rpx;
}

.debug-content {
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
  word-break: break-all;
}